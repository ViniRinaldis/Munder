body{
  background: #000000;
  background-image: url(<%= image_path "background.jpg" %>);
  background-repeat: no-repeat;
  background-size: cover;
  overflow: hidden;
  position: absolute;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  align-items: center;
  display: flex;
  justify-content: center;
}
input
{
  display: block;
}
.login-container{
  display: inline-block;
  margin: 5px auto;
}
.login-form{
  display: block;
  margin-top: 100px;
}
input{
  margin-bottom: 20px;
  background: #FFFFFF;
  border: 0.5px solid #282828;
  height: 25px;
  padding-left: 5px;
  border-radius: 5px;
}
.logo{
  height: inherit;
  margin-right: 30px;
  display: inline-block;
  float: left;
}

.login-container{
  float: left;
}
.submit{
  float: left;
}

a{
  margin-left: 15px;
  float: left;
  padding-left: 10px;
  text-decoration: none;
  background: #FFFFFF;
  padding: 3px 10px;
  color: #000000;
  border: 0.5px solid #282828;
  border-radius: 5px;
}
 

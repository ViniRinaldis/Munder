/* Documento CSS */
html{
  height: 100%;
  box-sizing: border-box;
}
body{
  min-height: 100%;
}
html, body, div, span, h1, h2, h3, h4, h5, h6, p, blockquote, 
ul, li, article, main, footer, header, nav, section {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font-family: "Helvetica" ;
	vertical-align: baseline;
	text-align: justify;
}

/*a:link
{
	text-decoration: none;
	color: #282828;
}*/
a:link, a:visited {
	text-decoration: none;
	color:#282828;
	}
a:hover { 
	color: #FFFFFF;
	}
a:active {
	text-decoration: none
	}
img, video
{
	max-width: 100%;
}

body
{
	background: #242424;
}

.topo
{
	position: fixed;
	margin : 0 auto;
	height: 50px;
	width: 100%;
	background: #FFFFFF;
	z-index: 100;
}
.topo ul
{

	float: right;
	margin-top: 0px;
	list-style: none;
}
.topo ul li {
        float: left;
        margin: 0 5px;
        height: 50px;
        /*background: url(separator.jpg)no-repeat 0% 100%;*/
}
.topo ul li a {
	min-width: 70px;
	float:left;
    font: 16px Trebuchet MS,Sans-Serif, Verdana, Arial, Helvetica ;
	text-decoration: none;
	line-height: 50px;
	text-align: center;
}
.topo ul li a:hover
{
	line-height: 50px;
	height: 50px;
	min-width: 70px;
	margin: 0 auto;
	background: #282828;

}
.topo ul li img
{
	position: relative;
	float: right;
	margin-right: 5px;
	margin: 5px 0 0 5px ;
}
.topo img{
	margin-left: 70px;
}
.busca form {position:relative;}
.busca {

	width:220px;
	background: #282828;
	height: 22px;
	position:fixed;
	left: 40%;
	top:10px;
	border-radius:10px;
}
.busca input[type="search"] 
{
	border-style: none;
	background:#282828;
	margin: 2px 0 0 7px;
	color: #bcbabb;

}
.busca input[type="submit"] 
{
	height:20px;
	width: 20px;
	margin: 1px 0 0 10px; 
	position: relative;
	right: 10px;
	cursor:pointer;
	border: none;
	text-indent: -9999px;
  background: #282828 url(<%= image_path "buscar.png"%> ) no-repeat;
}
.menu
{
	float: right;
	position: relative;
	margin-top: 50px;
	margin-bottom: 15px;
	width: 100%;
	height: 35px;
	z-index: 99;
  background: #282828 url(<%= image_path "gradientemenu.jpeg"%>) repeat-x ;
  text-align: left;
  padding-top: 15px;
}
.menu ul
{
	position: relative;
	margin: auto;
	list-style: none;
	text-align: center;
}
.menu ul li
{
	/*float : left;*/
	margin-top: 15px;
	display: inline;
	position: relative;
	line-height: 50px;
	margin : 15px 15px ;

}
.menu ul li a 
{
	padding: 2px 0px;
	margin : 0 0 0 30px;
	/*float:left;*/
    font: 16px Trebuchet MS,Sans-Serif, Verdana, Arial, Helvetica ;
	text-decoration: none;
}
.menu ul li a:hover
{
	color: #FFFFFF;
}
.tudo
{
  margin: auto;
  position: relative;
  min-height: 92%
}
.musicas
{
	height: 100%;
	width: 15%;
	max-width: 150px;
	color: #bcbabb;
	position: fixed;
	float: left;
	margin : 50px 0 0 20px;
  background: #282828 url(<%= image_path "linha.png"%>) 100%  repeat-y;
	z-index: 98;
}
.musicas h2
{
	margin-top: 70px;
	margin-left: 10px;
	font: 18px Trebuchet MS,Sans-Serif, Verdana, Arial, Helvetica ;
}
.musicas ul
{
	margin-top: 15px;
	margin-left: 0;
	height: 160px;
	margin-left: 15px;

}
.musicas ul li
{
	list-style: none;
	color: #bcbabb;
	margin: 10px 0 5px 5px;
}
.musicas ul li a
{
	color: #bcbabb;
}
.musicas ul li a:hover
{
	color: #FFFFFF;
}
.musicas ul li a img
{
	margin: 0 5px 0 0;
}
.menu-musica
{
	margin: 0 0 0 -3px;
	width: 90%;
  background: #282828 url(<%= image_path "linha.png"%>) 100% repeat-x;
	background-position: 0 100%;
}

.recentes h2
{
	margin-top: 20px;
	margin-left: 0;
	font: 18px Trebuchet MS,Sans-Serif, Verdana, Arial, Helvetica ;
}
.musica-tocada{
	margin-top: 15px;
	line-height: 15px;
}
.musica-tocada img
{
	float: left;
}
.musica-tocada a
{
	float: right;
	font: 10px Helvetica;
	margin-right: 4px;
	height: 10px;
	width: 100px; /* ajuste para a largura desejada */
  	white-space: nowrap;
  	overflow: hidden;
  	color: #bcbabb;
  	text-overflow: ellipsis;
}
.musica-tocada a:hover
{
	color: #EF862A;
}
.center-box
{
	max-width: 650px;
	position: relative;
	clear: both;
	margin :auto;
	width: 70%;
	margin-bottom: 20px;
}
.post
{
	position: relative;
	margin: 15px 0 0 20px;
	background: #bcbabb;
	line-height: 20px;
}
.nome-horario
{
	float: left;
	position: relative;
	margin-top: 10px;
	width: 500px;
	height: 50px;
}
.nome-horario h5
{
	font: 12px Helvetica;
	color: #282828;
	margin: 0 0 0 10px;
}
.post img
{
	clear: both;
	float: left;
	margin-left: 15px;
	margin-top: 10px;
}
.nome-horario a 
{
	position: relative;
	margin-left: 10px;
	margin-top: 15px;
}
.post p
{
	position: relative;
	clear: both;
	margin:0 15px 0 15px ;
}
.comentario a
{
	float: none;
	margin-left: 15px;
}
.footer
{
	position: relative;
  width: 100%;
  right: 0;
  bottom: 0;
  left: 0;
	height: 50px;
	line-height: 50px;
	background: #bcbabb;
	z-index: 99;
}
.footer h5
{
	text-align: center;
}
.amigos
{
	color: #bcbabb;
	position: fixed;
	float: right;
	right: 0;
	height: 100%;
	width: 15%;
	display: block;
  background: #282828 url(<%= image_path "linha.png"%>) repeat-y;
}
.amigos h2
{
	text-align: center;
	margin-top: 120px;
	width: 150px;
	height: 50px;
	font: 18px Trebuchet MS,Sans-Serif, Verdana, Arial, Helvetica ;
}
.amigo-perfil
{
	clear: both;
	margin-right: 10px;
}
.amigo-perfil img
{
	float: left;
	margin-left: 5px;
	margin-bottom: 20px;
}
.amigo-perfil a
{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis; ;
	position: absolute;
	clear: none;
	float: right;
	color: #bcbabb;
	margin-left: 15px;
}
.amigo-perfil a:hover
{
	color: #FFFFFF;
}
.nome-musica a
{
	position: absolute;
	margin-top: 5px;
	float: left;
	font: 14px Helvetica;
	margin-right: 4px;
	height: 18px; /* ajuste para a largura desejada */
  	white-space: nowrap;
  	overflow: hidden;
  	color: #bcbabb;
  	text-overflow: ellipsis; 
}
.nome-musica a:hover
{
	color: #EF862A;
}
.nome-musica a img
{
	float: left;
	margin-left: 0;
	margin-right: 4px;

}
/* Celulares */
@media all and (max-width: 680px)
{
	body{
		overflow-x: hidden;
	}
	.center-box 
	{
		margin: auto;
		width: 90%;
	}
	.post
	{
		margin: 0;
	}
	.post p
	{
		width: 90%;
		margin: 0 auto;
	}
	.musicas
	{
		display: none;
	}
	.amigos
	{
		display: none;
	}
	.menu {
		background: none;
		float: left;
		height: initial; 
	}
	.menu ul
	{
		float: none;
		clear:right;
		margin-left: 0;
		margin-top: 30px;
	}
	.menu ul li
	{
		margin-left: 0;
		background: #bcbabb;
		line-height: 50px;
		width: 100%;
		display: block;
		float: none;
		position: initial;
		margin: 5px 0 0 0;
		text-align: center;
		clear: both;
	}
	.menu ul li a:link
	{
		margin-left: 0;
		line-height: 50px;
	}
	.menu ul li a:hover
	{
		float: left;
		line-height: 50px;
		width: 100%;
	    height: 50px;
		background: #000000;
		color: #FFFFFF;

	}
	.busca
	{

		position: initial;
		width: 100%;
	}
	.busca input[type="search"]
	{
		width: 85%;

	}
	.busca input[type="submit"]
	{
		float: right;
	}
	.center-box
	{
		margin-bottom: 20px;
	}
	.post
	{
		margin-bottom: 10px;
	}
	.topo
	{
		height: 77px;
	}
	.topo img
	{
		margin-left: 30px;
	}
}
@media all and (max-width:975px)
{
	.recentes img
	{
		display: none;
	}
	.musica-tocada a
	{
		float: left;
		width: 100px; /* ajuste para a largura desejada */
  		white-space: nowrap;
  		overflow: hidden;
  		text-overflow: ellipsis;
	}
	.musicas{
		background: #282828;
	}
	.menu-musica ul 
	{
			margin-left: 10px;
	}
	.menu-musica ul li a img
	{
		display: none;
	}
	.amigos {
		background: #282828;
	}

  height: 100%;
box-sizing: border-box;}
